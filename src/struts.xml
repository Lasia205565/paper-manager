<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<constant name="struts.devMode" value="true" />
	<constant name="struts.i18n.encoding" value="utf-8" />

	<package name="default" extends="struts-default">
		<interceptors>

			<interceptor name="authentication" class="support.AuthenticationInterceptor" />

			<interceptor-stack name="user">
				<interceptor-ref name="authentication" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>

			<interceptor-stack name="guest">
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>

		</interceptors>

		<!-- Set the default action and global exception handling. -->
		<default-action-ref name="index" />
		<global-results>
			<result name="error">/error.jsp</result>
			<result name="login" type="redirectAction">Login_input</result>
		</global-results>
		<global-exception-mappings>
			<exception-mapping exception="java.lang.Exception"
				result="error" />
		</global-exception-mappings>

		<action name="index">
			<result>/index.jsp</result>
		</action>
		<action name="addend" method="endadd" class="action.PaperAction">
			<result name="success">/MainMenu.jsp</result>
		</action>
		<action name="Login_*" method="{1}" class="action.Login">
			<result name="input">/Login.jsp</result>
			<result>/MainMenu.jsp</result>
		</action>
		<action name="Logout" method="execute" class="action.Logout">
			<result type="redirectAction">index</result>
		</action>
		<action name="Registration_*" method="{1}" class="action.Registration">
			<result name="input">/Registration.jsp</result>
			<result type="redirectAction">MainMenu</result>
		</action>

		<action name="Paper_delete" method="delete" class="action.PaperAction">
			<result name="success">/MainMenu.jsp</result>
		</action>
		<action name="update" method="execute" class="action.update">
		<result name="success">/Paper.jsp</result>
		</action>

		<action name="addpaper" class="action.AddPaper" method="input">
			<result name="input">/add-paper-input.jsp</result>
			<interceptor-ref name="user" />
		</action>

		<action name="regpaper" class="action.AddPaper" method="execute">
			<result name="success">/add-paper-result.jsp</result>
		</action>
		<action name="chooseSearch" class="action.SearchPaper" method="chooseSearch">
			<result name="success">/search-result.jsp</result>
		</action>
		<action name="search*" class="action.SearchPaper" method="search{1}">
			<result name="success">/search-result.jsp</result>
		</action>
		<action name="fileDownload" class="action.FileDownloadAction">
			<result name="success" type="stream">
				<param name="contentDisposition">attachment;filename="${fileName}"</param>
				<param name="inputName">downloadFile</param>
			</result>
			<interceptor-ref name="user" />
		</action>
		<action name="sort3" class="action.sort3th" method="findsort3th">
			<result name="success">search-result.jsp</result>
		</action>
		<action name="sort2" class="action.sort3th" method="findsort2th">
			<result name="success">search-result.jsp</result>
		</action>
		<action name="sort1" class="action.sort3th" method="findsort1th">
			<result name="success">search-result.jsp</result>
		</action>
		<action name="workload" class="action.workloadshow" method="workload">
			<result name="workload">/workload.jsp</result>
		</action>
	</package>

	<package name="wildcard" namespace="/" extends="default">
		<action name="*">
			<result>/{1}.jsp</result>
		</action>
	</package>
</struts>